
$(function () {
  $(".hoge1").hover(overFunc, outFunc);

  function overFunc(){
    $(this).css("background-color", "#FC6");
  }

  function outFunc(){
    $(this).css("background-color", "#09C");
  }
});

$(function () {
  $(".hoge2").hover(overFunc1, smallFunc1);
});

function smallFunc1() {
  $(this).animate({width: "600px", height: "50px"});
};
function overFunc1() {
  $(this).animate({width: "600px", height: "600px"});
};

