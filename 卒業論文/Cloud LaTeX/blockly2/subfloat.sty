   \subpicture{Fourth}
    \subcaption*{Fourth Figure}
     \label{fig:4}
  \end{center}
  \begin{minipage}[t]{.47\textwidth}
   ~
   \begin{center}
    \subpicture{Fifth}
     \subcaption*{Fifth Figure}
      \label{fig:5}
   \end{center}
  \end{minipage}
  ~
